@page
@model MyRazorPage.Pages.Account.SignUpModel
@{
}

<div id="form">
    <div id="form-title">
        <span><a href="signup.html" style="color: red;">SIGN UP</a></span>
        <span><a href="signin.html">SIGN IN</a></span>
    </div>
    <div id="form-content">
        @if(ViewData["mess"]!=null){
            <h3 style="color:red">@ViewData["mess"]</h3>
        }
        <form action="" method="post">
            <label>Email<span style="color: red;">*</span></label><br />
            <input asp-for="Account.Email" required /><br />
            <label>CustomerID<span style="color: red;">*</span></label><br />
            <select asp-for="Account.CustomerId">
                @foreach (var item in Model.customers){
                    <option>@item.CustomerId</option>
                }
            </select>
            <br />
            <label>EmployeeID<span style="color: red;">*</span></label><br />
            <select asp-for="Account.EmployeeId">
                @foreach (var item in Model.employees)
                {
                    <option>@item.EmployeeId</option>
                }
            </select>
            <br />
            <label>Password<span style="color: red;">*</span></label><br />
            <input asp-for="Account.Password" type="password" required /><br />
            <input asp-for="Account.Role" type="password" hidden value="2" /><br />
            <input type="submit" value="SIGN UP" style="margin-bottom: 30px;" />
        </form>
    </div>
</div>