@page
@model MyRazorPage.Pages.Admin.Categories.IndexModel
@{
}
@Html.AntiForgeryToken()
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<div id="content-left">
    <ul>
        <a href="~/Admin/Dashboard">
        <li>Dashboard</li></a>
        <a href="~/Admin/Order">
        <li>Orders</li></a>
        <a href="~/Admin/Product/Display">
        <li>Products</li></a>
        <a href="Index">
        <li>Categories</li></a>
    </ul>
</div>
<div id="content-right">
    <div class="path-admin">CATEGORIES LIST</b></div>
    <div class="content-main">
        <div id="content-main-dashboard">
            <div id="product-title-header">
            <a href="Create">Create a new Categories</a> 
            </div>
            <div id="order-table-admin">
                <table id="orders">
                    <tr>
                        <th>CategoryID</th>
                        <th>CategoryName</th>
                        <th>Description</th>
                        <th>Picture</th>
                        <th></th>
                    </tr>
                    @foreach(var obj in Model.categories){
                    <tr>
                        <td>@obj.CategoryId</td>
                        <td>@obj.CategoryName</td>
                        <td>@obj.Description</td>
                        <td><img src="/img/1.jpg" style="width:100px;height:100px" /></td>
                            <td>
                            <a asp-page="Update" asp-route-id="@obj.CategoryId">Edit</a>  | 
                            <a onclick="return confirm('Are you sure you want to delete category :@obj.CategoryName')" asp-page="Delete" asp-route-id="@obj.CategoryId">Delete</a>
                        </td>
                    </tr>
                    }
                </table>
                <paging total-records="@Model.totalCategories" show-total-pages="false" show-total-records="false" page-size="@Model.pageSize" page-no="@Model.pageNo"></paging>
            </div>           
        </div>
    </div>
</div>